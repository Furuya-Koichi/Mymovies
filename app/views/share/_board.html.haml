- if current_user.own_board?(board)
  %div{:style => "display: inline; float: right;"}
    = link_to icon('fas', 'pen'), edit_movie_path(board), id: :"button-edit-#{board.id}"
    = link_to icon('fas', 'trash-alt'), movie_path(board), id: :"button-delete-#{board.id}",method: :delete, data: { confirm: '削除してよろしいですか？' }
- else
  %div{:style => "display: inline; float: right;"}
    = render 'movies/bookmark_area', board: board